{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.3.0",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-zlib": "*",
        "laravel/framework": "^11.9",
        "laravel/tinker": "^2.9",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pint:ci": [
            "@php composer pint:fix -- --test"
        ],
        "pint:fix": [
            "@php vendor/bin/pint"
        ],
        "rector": [
            "@php vendor/bin/rector --config=config/rector.php --autoload-file=./bootstrap.php"
        ],
        "rector:ci": [
            "./bin/ci-report.sh coverage/quality.rector.json php vendor/bin/rector --config=config/rector.php --autoload-file=./bootstrap.php --no-progress-bar --clear-cache --dry-run --output-format=gitlab"
        ],
        "stan": [
            "@composer stan:app",
            "@composer stan:test"
        ],
        "stan:app": [
            "@php vendor/bin/phpstan --configuration=phpstan.app.neon"
        ],
        "stan:test": [
            "@php vendor/bin/phpstan --configuration=phpstan.test.neon"
        ],
        "stan:ci": [
            "@composer stan:ci:app",
            "@composer stan:ci:test"
        ],
        "stan:ci:app": [
            "./bin/ci-report.sh coverage/quality.stan.app.json php -d memory_limit=2G vendor/bin/phpstan --configuration=phpstan.app.neon --no-progress --error-format=gitlab"
        ],
        "stan:ci:test": [
            "./bin/ci-report.sh coverage/quality.stan.test.json php -d memory_limit=2G vendor/bin/phpstan --configuration=phpstan.test.neon --no-progress --error-format=gitlab"
        ],
        "quality": [
            "@composer pint:fix",
            "@composer rector",
            "@composer stan"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
